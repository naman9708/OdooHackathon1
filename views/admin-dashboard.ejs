<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Dayflow</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            color: #fff;
        }
        .header {
            background: #0f0f1e;
            border-bottom: 2px solid #444;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }
        .nav {
            display: flex;
            gap: 20px;
            align-items: center;
        }
        .nav-item {
            padding: 8px 20px;
            color: #fff;
            text-decoration: none;
            transition: background 0.3s;
            border-radius: 5px;
        }
        .nav-item:hover {
            background: #2a2a3e;
        }
        .company-name {
            font-size: 24px;
            font-weight: bold;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .user-section {
            display: flex;
            align-items: center;
            gap: 15px;
            position: relative;
        }
        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-weight: bold;
            font-size: 18px;
        }
        .dropdown {
            position: absolute;
            top: 60px;
            right: 0;
            background: #1e1e2e;
            border: 2px solid #444;
            border-radius: 8px;
            padding: 10px 0;
            display: none;
            min-width: 150px;
            z-index: 1000;
        }
        .dropdown.active {
            display: block;
        }
        .dropdown-item {
            padding: 10px 20px;
            color: #fff;
            text-decoration: none;
            display: block;
            transition: background 0.3s;
        }
        .dropdown-item:hover {
            background: #2a2a3e;
        }
        .container {
            padding: 30px;
            max-width: 1400px;
            margin: 0 auto;
        }
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        .stat-card {
            background: #1e1e2e;
            border: 2px solid #444;
            padding: 25px;
            border-radius: 10px;
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            border-color: #667eea;
        }
        .stat-number {
            font-size: 36px;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 10px;
        }
        .stat-label {
            color: #888;
            font-size: 14px;
        }
        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #fff;
        }
        .new-btn {
            background: #8b5cf6;
            color: #fff;
            border: none;
            padding: 12px 30px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 5px;
            margin-bottom: 20px;
            transition: all 0.3s;
        }
        .new-btn:hover {
            background: #7c3aed;
            transform: translateY(-2px);
        }
        .employee-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 25px;
        }
        .employee-card {
            background: #1e1e2e;
            border: 2px solid #444;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }
        .employee-card:hover {
            border-color: #8b5cf6;
            transform: translateY(-5px);
        }
        .employee-avatar {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }
        .employee-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .employee-avatar svg {
            width: 70%;
            height: 70%;
            fill: white;
        }
        .status-dot {
            position: absolute;
            bottom: -3px;
            right: -3px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 3px solid #1e1e2e;
        }
        .status-dot.present { background: #10b981; }
        .status-dot.absent { background: #ef4444; }
        .status-dot.leave { background: #f59e0b; }
        .employee-info {
            flex: 1;
        }
        .employee-name {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 4px;
        }
        .employee-role {
            font-size: 12px;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="nav">
            <div class="company-name">Dayflow</div>
            <a href="/dashboard" class="nav-item">Dashboard</a>
            <a href="/employees" class="nav-item">Employees</a>
            <a href="/attendance" class="nav-item">Attendance</a>
            <a href="/leaves" class="nav-item">Time Off</a>
        </div>
        <div class="user-section">
            <span><%= user.name %></span>
            <div class="user-avatar" onclick="toggleDropdown()">
                <%= user.name.charAt(0).toUpperCase() %>
            </div>
            <div class="dropdown" id="userDropdown">
                <a href="/profile" class="dropdown-item">My Profile</a>
                <a href="/logout" class="dropdown-item">Log Out</a>
            </div>
        </div>
    </div>

    <div class="container">
        <h1 style="margin-bottom: 30px;">Welcome back, <%= user.name %>!</h1>
        
        <div class="stats">
            <div class="stat-card">
                <div class="stat-number"><%= employees.length %></div>
                <div class="stat-label">Total Employees</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= employees.filter(e => e.status === 'present').length %></div>
                <div class="stat-label">Present Today</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= pendingLeaves %></div>
                <div class="stat-label">Pending Leave Requests</div>
            </div>
        </div>

        <h2 class="section-title">Employees</h2>
        <a href="/employees"><button class="new-btn">View All Employees</button></a>
        
        <div class="employee-grid">
            <% employees.slice(0, 100).forEach(emp => { %>
                <div class="employee-card" onclick="location.href='/employees/<%= emp.id %>'">
                    <div class="employee-avatar">
                        <% if (emp.profilePicture) { %>
                            <img src="<%= emp.profilePicture %>" alt="<%= emp.name %>">
                        <% } else { %>
                            <svg viewBox="0 0 24 24"><circle cx="12" cy="8" r="4"/><path d="M4 20C4 16.6863 6.68629 14 10 14H14C17.3137 14 20 16.6863 20 20V21H4V20Z"/></svg>
                        <% } %>
                        <div class="status-dot <%= emp.status %>"></div>
                    </div>
                    <div class="employee-info">
                        <div class="employee-name"><%= emp.name %></div>
                        <div class="employee-role"><%= emp.position || 'Employee' %></div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        function toggleDropdown() {
            document.getElementById('userDropdown').classList.toggle('active');
        }
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.user-section')) {
                document.getElementById('userDropdown').classList.remove('active');
            }
        });
    </script>
</body>
</html>